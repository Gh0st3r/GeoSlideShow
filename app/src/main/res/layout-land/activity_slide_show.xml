<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgSlideShow"
        android:layout_weight="1"
        android:layout_margin="1dp"
        android:background="@drawable/back_main" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:layout_margin="1dp"
        android:background="@drawable/back_main"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/real_photo_count"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/displayed_photo"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/curr_photo_numb"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/curr_foto_location"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_date"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>